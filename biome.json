{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "maxSize": 2000000,
        "ignore": [
            ".next/**",
            "storybook-static/**",
            "node_modules/**",
            "public/**",
            ".storybook/**"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error"
            },
            "suspicious": {
                "noExplicitAny": "error"
            },
            "style": {
                "useConst": "error",
                "useTemplate": "error",
                "useSelfClosingElements": "error",
                "useImportType": "error",
                "useBlockStatements": "error"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "ignore": [
            ".next/**",
            "storybook-static/**",
            "node_modules/**",
            "public/**",
            ".storybook/**"
        ],
        "lineEnding": "lf"
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "es5",
            "semicolons": "always"
        }
    }
}
